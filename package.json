{
  "name": "nyumbasync_backend",
  "version": "1.0.0",
  "description": "NyumbaSync Backend API",
  "main": "server.js",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "start:single": "CLUSTER_MODE=false node ./bin/www",
    "start:cluster": "CLUSTER_MODE=true node ./bin/www",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:auth": "jest tests/auth.test.js --runInBand",
    "test:document": "jest tests/document.test.js --runInBand",
    "test:notification": "jest tests/notification.test.js --runInBand",
    "test:message": "jest tests/message.test.js --runInBand",
    "test:property": "jest tests/property.test.js --runInBand",
    "test:maintenance": "jest tests/maintenance.test.js --runInBand",
    "test:move-out": "jest tests/move-out-deposit.test.js --runInBand",
    "test:vendor": "jest tests/vendor.test.js --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:workflows": "jest tests/integration tests/e2e --runInBand",
    "test:all": "jest tests --runInBand",
    "test:security": "node tests/security/run-security-tests.js",
    "test:mfa": "mocha tests/security/mfa.test.js --timeout 10000",
    "test:lockout": "mocha tests/security/account-lockout.test.js --timeout 10000",
    "test:password-history": "mocha tests/security/password-history.test.js --timeout 10000",
    "build": "npm install",
    "setup:models": "node scripts/setup-core-models.js",
    "seed:sample": "node scripts/seed-sample-data.js",
    "test:flows": "node scripts/test-flows.js"
  },
  "keywords": [
    "nyumbasync",
    "backend",
    "api",
    "property-management"
  ],
  "author": "NyumbaSync Team",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@jest/core": "^29.7.0",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.11.0",
    "base64url": "^3.0.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.0",
    "exceljs": "^4.4.0",
    "express": "4.21.2",
    "express-async-handler": "^1.2.0",
    "express-jwt": "^8.5.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "geolib": "^3.3.4",
    "handlebars": "^4.7.8",
    "hbs": "^4.2.0",
    "helmet": "^8.1.0",
    "jest-environment-node": "^29.7.0",
    "joi": "^18.0.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongoose": "^6.13.8",
    "morgan": "^1.10.1",
    "mpesa-node": "^0.1.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.5",
    "nodemailer-express-handlebars": "^7.0.0",
    "path-to-regexp": "^6.2.0",
    "pdfkit": "^0.17.1",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^7.2.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "twilio": "^5.8.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^29.7.0",
    "chai": "^6.2.1",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "mocha": "^11.7.5",
    "mongodb-memory-server": "^10.1.4",
    "nock": "^14.0.5",
    "nodemon": "^3.1.0",
    "supertest": "^7.1.4"
  }
}
