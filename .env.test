# Test Environment Configuration
NODE_ENV=test
PORT=3002

# Test Database (use in-memory or separate test database)
MONGODB_URI=mongodb://localhost:27017/nyumbasync_test

# Test JWT Secrets
JWT_SECRET=test-jwt-secret-for-testing-only-min-32-chars
JWT_REFRESH_SECRET=test-refresh-secret-for-testing-only-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Disable external services in tests
EMAIL_USER=
EMAIL_PASSWORD=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Test file upload
UPLOAD_DIR=./tests/uploads
MAX_FILE_SIZE=10485760

# Test rate limiting (more lenient)
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=error
